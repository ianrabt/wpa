<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >


        <EditText
            android:id="@+id/habitName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="HabitName" />


        <EditText
            android:id="@+id/habitTimeRange"
            android:layout_width="5dp"
            android:layout_height="87dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="time"
            android:layout_below="@id/habitName"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/streakCounter"/>


        <EditText
            android:id="@+id/streakCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:layout_below="@id/habitName"
            android:layout_toLeftOf="@+id/streakFlame"
            />

    <ImageView
        android:id="@+id/streakFlame"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/habitName"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/ic_notification_overlay" />

</RelativeLayout>