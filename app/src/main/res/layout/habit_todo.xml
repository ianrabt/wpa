<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="23dp"
        android:onClick="onCheckboxClicked"
        android:scaleX="2"
        android:scaleY="2" />

    <TextView
        android:id="@+id/habitName"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_above="@+id/habitTimeRange"
        android:layout_marginLeft="22dp"
        android:layout_marginBottom="18dp"
        android:layout_toRightOf="@+id/checkbox"
        android:layout_weight="1"
        android:textSize="25dp"
        android:ems="10"
        android:inputType="text"
        android:text="HabitNamey" />

    <TextView
        android:id="@+id/habitTimeRange"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkbox"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="-18dp"
        android:layout_weight="1"
        android:ems="9"
        android:inputType="text"
        android:text="2:00pm - 4:00pm"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/streakCounter"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/habitName"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-18dp"
        android:layout_toRightOf="@+id/habitTimeRange"
        android:layout_weight="1"
        android:ems="3"
        android:inputType="text"
        android:text="400"
        android:textSize="13dp"
        android:gravity="right"
        android:textAlignment="gravity"
        />



    <ImageView
        android:id="@+id/streakFlame"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_below="@+id/habitName"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-18dp"
        android:layout_toRightOf="@+id/streakCounter"
        android:layout_weight="1"
        app:srcCompat="@drawable/fire" />

</RelativeLayout>